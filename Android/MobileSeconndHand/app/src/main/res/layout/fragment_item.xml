<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="1dp"
    android:paddingBottom="1dp">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:id="@+id/advertisementMinPhoto"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tytuł ogłoszenia"
        android:id="@+id/advertisementTitleTextView"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/advertisementMinPhoto"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Cena: "
        android:id="@+id/textView9"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:layout_below="@+id/advertisementTitleTextView"
        android:layout_toRightOf="@+id/advertisementMinPhoto"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="49 zł"
        android:id="@+id/advertisementPriceTextView"
        android:layout_below="@+id/advertisementTitleTextView"
        android:layout_toRightOf="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Odległość: "
        android:id="@+id/textView11"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/textView9"
        android:layout_toRightOf="@+id/advertisementMinPhoto" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="3km"
        android:id="@+id/advertisementDistanceTextView"
        android:layout_below="@+id/advertisementPriceTextView"
        android:layout_toRightOf="@+id/textView11" />

</RelativeLayout>
